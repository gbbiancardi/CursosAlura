package br.com.alura.java.io.teste;

import java.io.BufferedWriter;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.io.Writer;

public class TesteEscrita {

	public static void main(String[] args) throws IOException {

		// Fluxo de Entrada com Arquivo 02
		OutputStream fos = new FileOutputStream("mussum.txt"); // InputStream é a classe pai
		Writer osw = new OutputStreamWriter(fos); // Reader é a classe mais genérica, classe pai
		BufferedWriter bw = new BufferedWriter(osw); // Transformando os Characteres em Linhas

		
		
		bw.close();
	}

}
