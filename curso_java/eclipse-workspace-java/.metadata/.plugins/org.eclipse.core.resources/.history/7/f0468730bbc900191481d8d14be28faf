package br.com.alura.java.io.teste;

import java.io.BufferedReader;
import java.io.BufferedWriter;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import java.io.OutputStreamWriter;
import java.io.Writer;

public class TesteEscrita {

	public static void main(String[] args) throws IOException {

		// Fluxo de Entrada com Arquivo 02
		OutputStream fis = new FileOutputStream("mussum.txt"); // InputStream é a classe pai
		Writer isr = new OutputStreamWriter(fis); // Reader é a classe mais genérica, classe pai
		BufferedWriter br = new BufferedWriter(isr); // Transformando os Characteres em Linhas

		br.close();
	}

}
