package br.com.alura.java.io.teste;

import java.io.BufferedReader;
import java.io.FileInputStream;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.io.Reader;

public class TesteEscrita {

	public static void main(String[] args) throws IOException {

		// Fluxo de Entrada com Arquivo 02
		InputStream fis = new FileInputStream("mussum.txt"); // InputStream é a classe pai
		Reader isr = new InputStreamReader(fis); // Reader é a classe mais genérica, classe pai
		BufferedReader br = new BufferedReader(isr); // Transformando os Characteres em Linhas

		

		br.close();
	}

}
